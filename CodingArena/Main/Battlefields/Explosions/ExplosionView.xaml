<UserControl x:Class="CodingArena.Main.Battlefields.Explosions.ExplosionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Ellipse Height="{Binding Size}" Width="{Binding Size}" Fill="Transparent"
             Stroke="Red" StrokeThickness="2">
        <Ellipse.RenderTransform>
            <TranslateTransform X="{Binding Offset}" Y="{Binding Offset}" />
        </Ellipse.RenderTransform>
    </Ellipse>
</UserControl>
